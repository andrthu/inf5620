from numpy import *
from matplotlib.pylab import *

def diferentiate(u, dt):
    n=len(u)

    d=zeros(n)

    d[0]=(u[1]-u[0])/dt
    d[n-1]=(u[n-1]-u[n-2])/dt

    for i in range(1,n-1):
        d[i]=(u[i+1]-u[u-1])/(2*dt)

    return d

t=linspace(0,1,30)
plot(t,exp(-t))
plot(t,diferentiate(exp,1./30))
